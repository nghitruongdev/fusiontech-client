{
    "compilerOptions": {
        "target": "ES2015",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@components/*": [
                "src/components/*"
            ],
            "@components": [
                "src/components"
            ],
            "@contexts/*": [
                "src/contexts/*"
            ],
            "@contexts": [
                "src/contexts"
            ],
            "@styles/*": [
                "src/styles/*"
            ],
            "@styles": [
                "src/styles"
            ],
            "@public/*": [
                "public/*"
            ],
            "@public": [
                "public"
            ],
            "@/*": [
                "./src/*"
            ]
        },
        "incremental": true
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "src/providers/.local.authProvider.ts",
        "src/providers/.local.authProvider.ts",
        "src/lib/.ignored.admin.firestore.ts",
        "src/lib/.ignored.adminFirebase.ts",
        "src/providers/firestore-data-provider/.ignored.firebaseAuth.ts",
        "src/providers/firestore-data-provider/.ignored.firebaseDatabase.ts",
        "src/components/store/cart/Cart-new.tsx",
        "src/components/store/cart/.local.CartHander.ts",
        "src/components/store/cart/.ignored.Cart.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
